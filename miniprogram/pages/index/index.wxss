/* pages/index/index.wxss */
/* 轮播图片 */
.slide-image{
width: 100%;
height: 85%;
}

.slidetext{
 position: absolute;
 top:85%;
 display: block;
 font-size: 31rpx;
 line-height: 60rpx;
}
/* 轮播container */
.mycenter{
  width: 90%;
  margin: 0 auto;
}
.comingfilmcontainer{
  width: 100%;
  background-color: #f8f8f8
}
.indexscroll{
   white-space: nowrap;
   margin-left: 5%;
   overflow: hidden;
   width: 700rpx;
}
.scrollitem{
  width: 200rpx; height: 300rpx; 
  display:inline-block;
  margin-right: 28rpx;
}
.mytitle{
  display: flex;
  justify-content: space-between;
}
.titlename{
  display: block;
  font-size: 24rpx;
  overflow: hidden;
}
.rating{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 搜索条目 */
.serachitem{
  position: absolute;
  background-color: #fff;
  z-index: 100;
  width: 91%;
  height: 500rpx;
 
}
.serachtitle{

 margin-bottom: 50rpx;
 font-size: 24rpx;
}