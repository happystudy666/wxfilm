/* pages/person/person.wxss */
.userinfo{
  height:300rpx;
  position: relative; 
margin: auto;
}
.loginbtn{
  position: absolute;
  width: 50%;
  transform: translate(50%,80%)
}
.profile-img{
  border-radius: 50%;
  width: 200rpx;
  height:200rpx;
  display: block;
  overflow: hidden;
  position: absolute;
  top:20px;
  left: 20rpx;
}
.profile-name{
  font-size:36rpx;
  position: absolute;/*绝对定位*/
  left:50%;          /*居中*/
  transform: translate(-50%,70rpx);
}
.personlist{
  width: 100%;
  height: 100rpx;
  font-size:30rpx;
  padding-left:40rpx;
  padding-right: 40rpx;
  display: flex;
  align-items: center; 
   border-bottom:1px solid #f0f3f6 
}
.personlist:first-child{
  margin-top:30rpx;
  border-top: 1px solid #f0f3f6; 
}
